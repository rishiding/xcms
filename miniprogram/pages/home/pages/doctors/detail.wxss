/* pages/index/homepage.wxss */
.header{
  width: 92%;
  height: 320rpx;
  background: #f00;
  padding: 0 4%;
}

.header .face{
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  text-align: center;
}

.header .face image{
  width: 160rpx;
  height: 160rpx;
  margin-top: 30rpx;
  border-radius: 15rpx;
  border: 5rpx #fff solid;
}

.header .name{
  width: auto;
  height: auto;
  text-align: center;
  margin-top: 15rpx;
  color: #fff;
  font-size: 28rpx;
}

.header .hinfo{
  width: 100%;
  height: auto;
  margin-top: 15rpx;
  text-align: center;
  color: #fff;
  font-size: 26rpx;
}

.header .hinfo .lt{
  width: auto;
  height: auto;
  float: left;
  margin-right: 30rpx;
}

.header .hinfo .rt{
  width: auto;
  height: auto;
  float: right;
  margin-right: 30rpx;
}

.content{
  width: 100%;
  height: auto;
  overflow: hidden;
}

.content .col{
  width: 92%;
  height: auto;
  background: #fff;
  padding: 0 4%;
  margin-top: 15rpx;
}

.content .col .title{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx #f5f5f5 solid;
  font-size: 30rpx;
  font-weight: bold;
}

.content .col .info{
  width: 100%;
  height: auto;
  font-size: 26rpx;
  padding: 15rpx 0;
  color: #000;
}

.content .col .info text{
  width: 100%;
  height: auto;
  line-height: 40rpx;
}

.btn_container {
  width: 100%;
  height: auto;
  margin: 30rpx auto;
  overflow: hidden;
}

.btn {
  width: 40%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #fff;
  margin: 0 5%;
  float: left;
}
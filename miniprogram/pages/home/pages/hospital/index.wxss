.themes-list{ background: #FFF; display: block;}
.themes-list-box{ display: block; position: relative; padding: 16px 20px; border-bottom: 1px solid #F2F2F2; }
.themes-list-thumbnail{width: 40px;height: 40px;float: left;margin-right: 12px;}
.themes-list-img{width: 40px;height: 40px;border-radius:2px; border: 1px solid #F2F2F2;}

.themes-list-name{ font-size: 16px; color: #444; height: 20px; line-height: 20px; overflow: hidden; }
.themes-list-description{ font-size: 12px; color: #999; height: 20px; line-height: 20px; overflow: hidden; }

.page_list {
    height:100%;
    display: flex;
    flex: 1;
    flex-direction: column;
}

.tips {
    font-size: 28rpx;
    text-align: center;
    padding:20rpx 40rpx 50rpx 40rpx;
    color: #ccc;
}
.tips image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}

.tips image,
.tips text {
    vertical-align: middle;
}
.swiper-tab{
    width: 100%;
    border-bottom: 2rpx solid #ccc;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
}
.swiper-tab-item{
    width: 30%; 
    color:#434343;
}
.active{
    color:#1AAD19;
    border-bottom: 4rpx solid #1AAD19;
}
swiper{
  text-align: center;
}